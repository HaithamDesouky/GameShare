<h1>{{game.name}}</h1>

<span>Game owned by <a href="/profile/{{ game.creator._id }}">{{ game.creator.name }}</a></span>

<div class="game">

  <p>{{ game.content }}</p>
  <p>{{game.platform}}</p>
  <p>{{ game.date }}</p>
    <img src="{{ game.photo }}" alt="photo of game"><p></p>
</div>

{{#if sameUser}}

{{#if loggedInUser.games}}
<form method="POST" action="/game/{{ game._id }}/delete">
  <button>Delete Game</button>
</form>

{{else}}
<p>Uh-oh! Seems like you don't have any games! You have to post one of yours in order to participate in our community!</p>
<br>
<a href="/game/create">Upload Game</a>
{{/if}}

{{else}}
<form action="/deal/new-deal/{{game._id}}">
  <button>Exchange Game</button>
</form>
{{/if}}
