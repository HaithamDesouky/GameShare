<form method="POST" enctype="multipart/form-data">
  <label for="input-name" >Name</label>
  <input type="text" id="input-name" name="name" value="{{user.name}}" />
  
   <label for="input-wishlist">Wishlist</label>
  <textarea type="text" id="input-wishlist" name="wishlist" name="wishlist" placeholder="Tell us the games you're looking to trade">{{user.wishlist}}</textarea>

  <label for="photo">Update Your Profile Picture</label>
  <input type="file" name="photo">
  
  <button>Update</button>
</form>