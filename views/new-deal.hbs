<h1>{{ game.name }} - {{ game.platform }}</h1>

<img src="{{game.photo}}" alt="Game photo">

<p>From: {{gameCreatorName}}</p>

<form action="/deal/new-deal" method="POST">
  <label>Exchange For:</label>
  <select id="buyerGame-list" name="buyerGame">
      <option value="" selected="selected" hidden>Please Select One</option>
    {{#each user.games}}
      <option value="{{this._id}}">{{this.name}}</option>
    {{/each}}
  </select>

  <label for="sellerId" style="color: red;"><strong>Seller ID to HIDE later!</strong></label>
  <input id="sellerId" value={{game.creator._id}} name="sellerId" >
  <label for="sellerGame" style="color: red;"><strong>Seller Game ID to HIDE later!</strong></label>
  <input id="sellerGame" value={{game._id}} name="sellerGame" >

  <label for="startDate">Starting Date</label>
  <input id="startDate" type="date" placeholder="Date" name="startDate">
  
  <label for="endDate">Ending Date</label>
  <input id="endDate" type="date" placeholder="Date" name="endDate">
  <button>Propose Deal</button>
</form>
