<h1>{{ deal.sellerGameName }}</h1>

<img src="{{deal.sellerGamePhoto}}" alt="Game photo">

<p>From: {{deal.sellerName}}</p>

  <label>Exchange For: {{ deal.buyerGameName}}</label>
  <br>
  <label for="startDate">Starting Date: {{ dateFormat deal.startDate "dddd, DD/MM/YYYY"}} </label>
  <br>
  <label for="endDate">Ending Date: {{ dateFormat deal.endDate "dddd, DD/MM/YYYY "}} </label>
  <br>

<div class="sign">
<form action="/deal/{{deal.id}}/accept" method="post"><Button>Accept</Button></form>
<form action="/deal/{{deal.id}}/reject" method="post"><button>Reject</button></form>
</div>
<div class="sign"> 

{{#each deal.comments}}
<div class="individual-comment">
  <img src="{{creator.photo}}" alt="image" style="width: 50px; height: 50px; border-radius:50%">{{creator.name}} <br>
  {{ dateFormat createdAt "dddd, MMMM Do YYYY, h:mm:ss a "}}
  <br>
  {{content}}
</div>
{{/each}}
<div class="sign">
<form method="POST" action='/deal/{{deal.id}}/comment'>
<label for="input-content"></label>
  <textarea name="content" placeholder="Post something please"></textarea> 
  <button class="btn btn-secondary mt-5">Leave the user a comment!</button>
</form>
</div>
</div>
