<div class="profile-view">


<div class="intro-to-profile">



<div>
  <h1>Welcome {{user.name}} ! You have {{pendingActions}} offers right now.</h1>
<span><strong>Name</strong>: {{user.name}}</span>
<br />
<span><strong>Email</strong>: {{user.email}}</span>
<br>
<a href="/deal/history" style="color: red;">Click here to view your deal history</a>

<br>
<a href="/profile/edit"> Edit your profile!</a>

</div>
<div>
{{#if user.photo}}
  <br>
  <img src="{{ user.photo }}" alt="user photo" class="profile-image">
{{/if}}

</div>
</div>
<br>


<h2>My Wish List</h2>
<p>{{user.wishlist}}</p>



<h2>Incoming Offers</h2>
{{#if pendingOffers}}
<div class="deal-div">
{{#each pendingOffers}}

<div class="offers">
  <div class="each-offer">
    <div class="offer-text">
<p>{{buyerGameName}} for {{sellerGameName}} </p><br>
<p>{{buyerName}}   with {{sellerName}}</p> 
<br>
<p>Deal Status: {{status}}</p> 
<br>
<a href="deal/{{id}}">View Deal</a>

    </div>
<div class="offer-image">
  <img src="{{buyerGamePhoto}}" alt="">
</div>

<form action="/deal/{{id}}/accept" method="post"><Button>Accept</Button></form>
<form action="/deal/{{id}}/reject" method="post"><button>Reject</button></form>
</div>
</div>
{{/each}}
</div>
{{else}}
<p>You have no incoming pending offers</p>

{{/if}}


<h2>Pending Requests</h2>

<div class="offers">
{{#if pendingRequests}}
{{#each pendingRequests}}

<div class="each-offer">
  <div class="offer-text">
{{buyerGameName}} for {{sellerGameName}} <br>
{{buyerName}}   with {{sellerName}}
<br>
Deal Status: {{status}}
<br>
<a href="deal/{{id}}">View Deal</a>
</div>
<div class="offer-image">
  <img src="{{sellerGamePhoto}}" alt="">
</div>
</div>


{{/each}}

{{else}}
<p>You have made no offers, <a href="/" style="color: red;">check out</a> what some of our other users have to offer!</p>

{{/if}}
</div>



<h2>Your games</h2>
{{#if game}}

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" data-touch="true">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
   
    <div class="carousel-item active"  >
      <img class="d-block w-50 h-50 mx-auto" src="{{game.1.photo}}" alt="{{game.1.name}}" style="min-height: 50vh; max-height:50vh">
    </div>
 {{#each game}}    
  <div class="carousel-item " >
      <img class="d-block w-50 h-50 mx-auto" src="{{photo}}" alt="{{name}}" style="min-height: 50vh; max-height:50vh;">
    </div>
{{/each}}
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>




<h3>{{name}}</h3>

